<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", bookshow_path(book.id) %></td>
      <td><%= link_to "Edit", bookedit_path(book.id) %></td>
      <td><%= link_to "Destroy", bookdestroy_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>
