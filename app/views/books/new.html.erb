<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", bookshow_path(book.id) %></td>
      <td><%= link_to "Edit", bookedit_path(book.id) %></td>
      <td><%= link_to "Destroy", books_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>



<h2>New Book</h2>
<%= form_with model: @book do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>
 
<p>Body</p>
 <%= f.text_area :body %>

 <p>
 <%= f.submit 'Create book' %>
 </p>

<% end %>


 <% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>